---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {%- for page in site.pages %}
  {%- if page.url contains "sitemap.xml" %}
  {%- else %}
  <url>
    <loc>{{ page.url  | absolute_url }}</loc>
    {%- if page.date %}
    <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
    {%- else %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    {%- endif %}
  </url>
  {%- endif %}
  {%- endfor %}
  {%- for post in site.posts %}
  <url>
    <loc>{{ post.url  | absolute_url }}</loc>
    {%- if post.last_modified_at %}
    <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
    {%- elsif post.date %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    {%- else %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    {%- endif %}
    {%- if post.image1x1 %}
    <image:image>
      <image:loc>{{ post.image1x1  | absolute_url }}</image:loc>
      <image:caption>{{ post.description }}</image:caption>
    </image:image>
    {%- endif %}
    {%- if post.image2x1 %}
    <image:image>
      <image:loc>{{ post.image2x1  | absolute_url }}</image:loc>
      <image:caption>{{ post.description }}</image:caption>
    </image:image>
    {%- endif %}
    {%- if post.image4x3 %}
    <image:image>
      <image:loc>{{ post.image4x3  | absolute_url }}</image:loc>
      <image:caption>{{ post.description }}</image:caption>
    </image:image>
    {%- endif %}
    {%- if post.image16x9 %}
    <image:image>
      <image:loc>{{ post.image16x9  | absolute_url }}</image:loc>
      <image:caption>{{ post.description }}</image:caption>
    </image:image>
    {%- endif %}
  </url> 
  {%- endfor %}
</urlset>